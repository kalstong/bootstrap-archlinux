pkgname=mssql-tools
pkgname_sufix=18
pkgver=18.1.1.1
pkgrel=1
pkgdesc="Microsoft® SQL Server® Tools for Linux"
arch=('x86_64')
url="https://packages.microsoft.com/rhel/8/prod/"
license=('custom')
depends=('mssql-odbc')
options=('!strip')
source=("https://packages.microsoft.com/rhel/8/prod/${pkgname}${pkgname_sufix}-${pkgver}-1.x86_64.rpm")
sha512sums=('442db9327fce9bc6741563915d897d749931a7f0acec7b795b370f49992cb1f7d533ea8f06c9a05dce5b3cccaad2223cc6a95208e6c3acf8d13223270619297f')

package() {
	cd "$srcdir"
	mv usr/share/{doc,licenses}
	mv usr opt "$pkgdir"

	install -dm755 "$pkgdir"/usr/bin/

	cd "$pkgdir"/opt/${pkgname}${pkgname_sufix}/bin
	for bin in *; do
		ln -s /opt/${pkgname}${pkgname_sufix}/bin/"$bin" "$pkgdir"/usr/bin/"$bin"
	done
}
